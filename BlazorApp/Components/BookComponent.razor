@using BlazorApp.Models

<div class="container mt-4">
	<div class="row">
		@foreach (var book in books)
		{
			<div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch mb-4">
				<div class="card shadow-sm w-100" style="width: 18rem;">
					<a href="/Error">
						<img src="@($"/images/3.jpg")" class="card-img-top" style="object-fit: cover; height: 200px;">
					</a>

					<div class="card-header ">
						<h4 class="card-title mb-3">@book.Title</h4>
						<small class="card-subtitle"><i>by @book.Author</i></small>
						<h6 class="card-subtitle text-muted">
							@* @foreach (var genre in book.Genre)
							{
								<span>@genre.GenreName</span>
							} *@
						</h6>
					</div>

					<div class="card-body d-flex flex-column">
						<div class="mt-auto">
							<div class="d-flex justify-content-between mb-2">
								<div class="text-black fw-bold">@book.Price.ToString("#,###.00") dkk</div>
								<span style="color: @(book.IsInStock ? "green" : "grey")">
							@(book.IsInStock ? "in stock" : "out of stock")
								</span>
							</div>
							<div class="d-flex justify-content-between mb-2">
								<a href="#" class="btn btn-outline-primary btn-sm custom-btn">More Info</a>
								<a href="#" class="btn btn-primary btn-sm custom-btn ml-2">Add to cart</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>





@code {
	[Parameter]
	public List<Book> books { get; set; }
}
