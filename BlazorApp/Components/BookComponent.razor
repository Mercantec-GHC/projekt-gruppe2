@using BlazorApp.Models

@if (book != null)
{
	<div class="col">
		<div class="card shadow-sm d-flex">
			<NavLink href=@($"/books/{book.Id}")>
				<img src="@($"/images/3.jpg")"
					 class="bd-placeholder-img card-img-top"
					 style="object-fit: cover; height: 200px;" role="img">
			</NavLink>

			<div class="card-header">
				<h4 class="card-title mb-3">@book.Title</h4>
				<small class="card-subtitle"><i>by @book.Author</i></small>
			</div>

			<div class="card-body d-flex flex-column">
				<div class="d-flex justify-content-between mb-2">
					<div class="active text-alert fw-semibold ">@book.Price.ToString("#,###.00") dkk</div>
					<span style="color: @(book.IsInStock ? "green" : "grey")">
						@(book.IsInStock ? "in stock" : "out of stock")
					</span>
				</div>
				<div class="d-flex justify-content-between mb-2">
					<NavLink class="btn btn-sm btn-light btn-outline-dark" href=@($"/_books/{book.Id}")>
						More Info
					</NavLink>
					<a href="#" class="btn btn-sm btn-light btn-outline-dark ml-2">Add to cart</a>
				</div>
			</div>
		</div>
	</div>
}
else
{
	<p>Book details are not available.</p>
}

@code {
	[Parameter]
	public Book? book { get; set; }
}
