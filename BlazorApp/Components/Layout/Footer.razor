
<div class="container text-light">
	<div class="row g-3">
		<div class="col">
			<span class="m-0">© 2024 BookVerse. All Rights Reserved.</span>
		</div>
		<div class="col-auto">
			<a href="https://github.com/Mercantec-GHC/projekt-gruppe2" class="text-light text-decoration-none px-2 px-md-5">
				<i class="bi bi-github"></i> GitHub
			</a>
		</div>
		<div class="col col-sm-auto">
			<button class="btn-link bg-transparent text-light text-decoration-none border-0 p-0" @onclick="OpenModal">
				<i class="bi bi-send-check"></i> Contact customer support
			</button>
		</div>
	</div>
</div>

<Modal @ref="modalCustomerSupport" Id="modalCustomerSupport">
	<Header>
		<h5 class="modal-title">Contact Customer Support</h5>
	</Header>
	<Body>
		<p>How can we assist you? Please provide details below.</p>
		<form>
			<div class="mb-3">
				<label for="recipient-email" class="col-form-label">Your email address:</label>
				<input type="email" class="form-control" id="recipient-email" required>
			</div>
			<div class="mb-3">
				<label for="recipient-name" class="col-form-label">Your name:</label>
				<input class="form-control" id="recipient-name">
			</div>
			<div class="mb-3">
				<label for="message-text" class="col-form-label">Message:</label>
				<textarea class="form-control" id="message-text" rows="4" required></textarea>
			</div>
		</form>
	</Body>
	<Footer>
		<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
		<button type="button" class="btn btn-primary" data-bs-dismiss="modal">Submit</button>
	</Footer>
</Modal>

@code {
	private Modal modalCustomerSupport;

	private bool isOpenModal = false;
	private void OpenModal()
	{
		// isOpenModal = true;
		modalCustomerSupport.Open();
	}
	private void CloseModal()
	{
		isOpenModal = false;
	}
}